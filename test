//                    asr24 = "15:00";
//                    isha24 = "19:00";
//                } else if (dayOfYear > 90 && dayOfYear <= 180) { // Adjust times for the second quarter of the year
//                    fajr24 = "5:30";
//                    zuhar24 = "13:30";
//                    asr24 = "16:00";
//                    isha24 = "21:00";
//                } else if (dayOfYear > 180 && dayOfYear <= 270) { // Adjust times for the third quarter of the year
