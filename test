                    }

                    if (prayerNames[nextPrayerIndex].equals("Asr")) {
//                        zuharAdded = LocalTime.parse(nextZuhar, DateTimeFormatter.ofPattern("H:mm")).plusMinutes(zuharAdditionMinutes);
